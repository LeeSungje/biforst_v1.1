extends layout

block content
   input(type="hidden", val='#{system}')#inputCurrentSystem
   .ims-container
     .col-sm-12.ims-detail-panel
       .col-md-offset-4.col-md-2.ims-detail-header
         .ims-detail-ttl #{system}
         span#locationContainer
       .col-md-1.ims-detail-header
         canvas.mss-chart
         span#curimsSessContainer
         span.ims-txt-delimiter &nbsp/&nbsp
         span#totimsSessContainer
         span.ims-txt-delimiter 만
         br
         span#curimsTpsContainer
         span.ims-txt-delimiter &nbsp/&nbsp
         span#totimsTpsContainer
         span.ims-txt-delimiter TPS

       .col-sm-offset-3.col-sm-1.ims-rm
         img(src='/img/title/system_solution.png', alt='', width="80" height="80").a(onclick='location.href="/mss-rm"') 
         .ims-txt-delimiter 극단적RM 
     
     .col-sm-12.ims-detail-panel    
       .col-sm-5.skt-panel.ims-detail-panel.stat-panel
         .col-sm-12
           img(src='/img/title/system_stat.png', alt='', width="40" height="40")
           span.ims-detail-txt 통계
         .col-sm-10.ims-stat-panel
           #REGIstat.ims-stat-txt REGI 성공율
         .col-sm-10.ims-stat-panel
           #SESSstat.ims-stat-txt Session 완료율 
         .col-sm-10.ims-stat-panel
           #MCstat.ims-stat-txt MC 성공율

       .col-sm-5.skt-panel.ims-detail-panel.alarm-panel
         .col-sm-12
           img(src='/img/title/system_alarm.png', alt='', width="40" height="40")
           span.ims-detail-txt 알람           
         .col-sm-10.ims-stat-panel#A1000
           .ims-stat-txt ALL SYSTEM DOWN
         .col-sm-10.ims-stat-panel#A1660
           .ims-stat-txt Multi Node Out of Service
         .col-sm-10.ims-stat-panel#A1663
           .ims-stat-txt Dual Internal Port Fail

   
   
block javascripts
  script(src="/js/flot/jquery.flot.time.js")
  script(src="/js/twinkle/jquery.twinkle-0.9.0.min.js")
  script(src="/js/skt/mss-detail.js")
  script(src="/js/charts/Chart.js")
  script(src="/js/utils.js")    
  